{
  "manifest_version": 2,
  "name": "VK Stories Loader by 4ashk1n",
  "description": "Download VK Stories",
  "version": "1.0.0",
  "author": "4ashk1n",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["popup.js"]
    }
  ],
  "permissions": ["activeTab", "tabs", "storage", "contextMenus", "management"]
}